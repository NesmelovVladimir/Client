   </Pane>
   <Pane prefHeight="54.0" prefWidth="1072.0">
      <children>
          <Button fx:id="updateInfo" disable="true" layoutX="538.0" layoutY="15.0" onAction="#onButtonClickUpdate" prefHeight="25.0" prefWidth="165.0" text="Отправить данные" />
          <ProgressIndicator fx:id="process" layoutX="495.0" layoutY="10.0" prefHeight="38.0" prefWidth="40.0" progress="1.0" visible="false" />
      </children>
   </Pane>
    <Label fx:id="Text" />
